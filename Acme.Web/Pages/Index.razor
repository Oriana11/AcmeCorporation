@page "/"
@inject NavigationManager NavigationManager


<!DOCTYPE html>
<html>
<head>
    <title>Acme Corporation</title>
    <link rel="stylesheet" type="text/css" href="css/styles.css">
</head>
<body>
<header>
  <div class="banner">
    
    <p class="color-offer">Special Offer: Buy at least one product to get the chance to win a cool prize</p>
  </div>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top">
            <a class="navbar-brand" href="#">Acme Corporation</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                  <a class="nav-link" href="#">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Services</a>
                </li>
               
                <li class="nav-item">
                  <a class="nav-link" href="#">Contact</a>
                </li>
              </ul>
            </div>
    </nav>
</header>

<main>
  <div class="container py-5">
    <h1 class="text-center products-text">Products: </h1>
  <div class="row row-cols-1 row-cols-md-3 g-4 py-5">
    <div class="col">
      <div class="card" style="width: 25rem;">
        <img class="card-img-top" src="/img/camera.jpg" alt="Card image cap" style="height: 300px;">
        <div class="card-body">
          <h3 class="card-title">Camera</h3>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <p class="price-color">$19.99</p>
          <!-- <a href="" class="btn btn-secondary custom-btn">Buy</a>-->
          <button type="submit" @onclick="HandleSubmit" class="btn btn-primary">Buy</button>
        </div>
      </div>
    </div>
  </div>
  </div>
 
     
</main>

<section class="">
<footer class="text-center text-white" style="background-color: #1bc47b; width: 100%;">
  <!-- Section: CTA -->
  <div class="container p-4 pb-0">
    <p class="d-flex justify-content-center align-items-center">
      <span class="me-3">Register for free</span>
      <button type="button" class="btn btn-outline-light btn-rounded">
        Sign up!
      </button>
    </p>
  </div>
  <!-- Section: CTA -->

  <!-- Copyright -->
  <div class="text-center p-3" style="background-color: #101d23;">
    &copy; 2023 Acme Corporation. All rights reserved.
    <a class="text-white" href="#">Acme Corporation</a>
  </div>
  <!-- Copyright -->
</footer>

</section>
</body>
</html>


@code {
  private void HandleSubmit()
  {
  // Perform any necessary logic or data processing here

  // Redirect to the desired page
    NavigationManager.NavigateTo("/AddDraw");
  }
}
